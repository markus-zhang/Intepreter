# Initialize variables
a = 10
b = 5
counter = 0

while counter < 10:
    # Testing compound assignment with arithmetic operators
    a += b  # Addition assignment
    b *= 2  # Multiplication assignment
    
    # Arithmetic operations
    sum_result = a + b
    product_result = a * b

    # Conditional checks with if statements
    if sum_result > 50:
        print('Sum is greater than 50')
    if product_result > 100:
        print('Product is greater than 100')
        break  # Breaking the loop if condition is met

    # Increment counter
    counter = counter + 1

print('Final values: a =', a, ', b =', b, ', counter =', counter)
