counter = 0
threshold = 3
limit = 10

while counter < 6:
    if counter == 0:
        if counter < limit:
            if threshold > 5:
                print('Zero, less than limit')
            elif threshold <= 5:
                print('Zero, limit OK')
    elif counter % 2 == 0:
        if counter > threshold:
            if counter < limit:
                print('Even, above threshold')
            elif counter >= limit:
                print('Even, above threshold, limit reached')
        elif counter <= threshold:
            if counter < limit:
                print('Even, below threshold')
    elif counter % 2 != 0:
        if counter > threshold:
            if counter < limit:
                print('Odd, above threshold')
            elif counter >= limit:
                print('Odd, above threshold, limit reached')
        elif counter <= threshold:
            if counter < limit:
                print('Odd, below threshold')

    counter = counter + 1

print('Done')
